%section.bar
	.chicken
		%span HEALTH
		%div
	.buffer
	.cobra
		%span HEALTH
		%div
%section.stat
	#chicken
		%span VOTE
	.score
		.title BATTLE STATS
		.detail
			.chicken
				%span.perc
					= perc(@chicken_perc)
					%span.fonthack %
				%span.votes 
					VOTES: 
					%br
					= @chicken_votes
			.cobra
				%span.perc
					= perc(@cobra_perc)
					%span.fonthack %
				%span.votes 
					VOTES:
					%br
					= @cobra_votes
	#cobra
		%span VOTE

%section{style: 'display:none', id: 'drawer'}
	= form_for Vote.new do |f|
		- if user_signed_in?
			= f.hidden_field :user_id, value: current_user.id
		= f.hidden_field :chicken
		= f.hidden_field :chicken
		.choice{style: 'display:none'}
			.chicken
				%label{for: 'chicken'} Chicken
				= f.check_box :chicken
			.cobra
				%label{for: 'cobra'} Cobra
				= f.check_box :cobra
		.reason
			= f.text_area :reason, placeholder: 'WHY?'
			= f.submit "GO"

= render partial: 'bar'
